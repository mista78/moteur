# Environment Configuration
APP_ENV=development
APP_DEBUG=true

# Paths
RATES_CSV_PATH=data/taux.csv
MOCKS_PATH=data/mocks

# Logging
LOG_PATH=logs/app.log
LOG_LEVEL=debug

# Database Configuration (Eloquent ORM - Multi-Database)
# Set the default connection name (mysql, mysql_secondary, mysql_analytics, pgsql, sqlite)
DB_DEFAULT_CONNECTION=mysql

# Primary Database (default)
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=carmf_ij
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# Secondary Database (optional - e.g., legacy system)
DB_SECONDARY_DRIVER=mysql
